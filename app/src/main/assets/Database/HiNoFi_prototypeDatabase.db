BEGIN TRANSACTION;
CREATE TABLE IF NOT EXISTS "MusicArtist" (
	"MusicArtistID"	INTEGER PRIMARY KEY AUTOINCREMENT,
	"ArtistName"	TEXT,
	"Genre"	TEXT,
	"Followers"	NUMERIC,
	"Image"	TEXT
);
CREATE TABLE IF NOT EXISTS "Concerts" (
	"ConcertID"	INTEGER PRIMARY KEY AUTOINCREMENT,
	"Date"	TEXT,
	"Venue"	TEXT,
	"Address"	TEXT,
	"PostCode"	TEXT,
	"MusicArtistID"	INTEGER,
	FOREIGN KEY("MusicArtistID") REFERENCES "MusicArtist"("MusicArtistID") ON DELETE SET NULL
);
CREATE TABLE IF NOT EXISTS "MusicReleases" (
	"ReleaseID"	INTEGER PRIMARY KEY AUTOINCREMENT,
	"SongID"	INTEGER,
	"MusicArtistID"	INTEGER,
	"Title"	TEXT,
	"Genre"	TEXT,
	"NoOfSongs"	NUMERIC,
	"ReleaseDate"	TEXT,
	"TypeOfRelease"	TEXT,
	FOREIGN KEY("MusicArtistID") REFERENCES "MusicArtist"("MusicArtistID") ON DELETE SET NULL,
	FOREIGN KEY("SongID") REFERENCES "Songs"("SongID") ON DELETE SET NULL
);
CREATE TABLE IF NOT EXISTS "Songs" (
	"SongID"	INTEGER PRIMARY KEY AUTOINCREMENT,
	"Title"	TEXT,
	"Length"	NUMERIC
);
CREATE TABLE IF NOT EXISTS "Following" (
	"FollowingID"	INTEGER PRIMARY KEY AUTOINCREMENT,
	"MusicArtistID"	INTEGER,
	"UserID"	INTEGER,
	FOREIGN KEY("MusicArtistID") REFERENCES "MusicArtist"("MusicArtistID") ON DELETE SET NULL,
	FOREIGN KEY("UserID") REFERENCES "User"("UserID") ON DELETE SET NULL
);
CREATE TABLE IF NOT EXISTS "User" (
	"UserID"	INTEGER PRIMARY KEY AUTOINCREMENT,
	"Username"	TEXT,
	"Email_Address"	TEXT,
	"Password"	TEXT
);
